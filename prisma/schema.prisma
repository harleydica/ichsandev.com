generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}


model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  slug      String   @unique
  likes     Int      @default(0)
  views     Int      @default(0)
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  likes     Int      @default(0)
}

